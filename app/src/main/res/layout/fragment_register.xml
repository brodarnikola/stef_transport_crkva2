<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.RegisterFragment"
        android:background="@color/colorBlack">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/relativelayout_borders"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


        <TextView
                android:id="@+id/tvRegisterTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Register vehicle"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="19sp"
                android:padding="20dp"
                android:background="@color/colorRed"
                android:layout_margin="1dp"
        />

        <View
                android:id="@+id/viewBellowTitle"
                android:layout_below="@+id/tvRegisterTitle"
                android:layout_width="match_parent"
                android:background="@color/colorWhite"
                android:layout_marginTop="-1dp"
                android:layout_height="1dp"/>

        <TextView
                android:id="@+id/tvReferenceId"
                android:layout_below="@+id/viewBellowTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Bus line number"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
        />

        <EditText
                android:id="@+id/etVehicleReferenceId"
                android:layout_below="@+id/tvReferenceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorBlack"
                android:text="" />


        <TextView
                android:id="@+id/tvRegistrationPlateNumber"
                android:layout_below="@+id/etVehicleReferenceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Registration plate number"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
        />

        <EditText
                android:id="@+id/etVehiclePlateNumber"
                android:layout_below="@+id/tvRegistrationPlateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="40dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorBlack"
                android:text=""
        />

        <ProgressBar
                android:id="@+id/progresbar"
                android:layout_above="@+id/btnConfirm"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:indeterminateDrawable="@drawable/custom_progressbar"
                android:visibility="gone"
        />

        <Button
                android:id="@+id/btnConfirm"
                android:layout_below="@+id/etVehiclePlateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="CONFIRM"
                android:textColor="@color/colorWhite"
                android:background="@color/colorLightGreen"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>